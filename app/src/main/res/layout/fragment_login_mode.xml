<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/auth_student_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/auth_student_btn_txt"
        />

    <Button
        android:id="@+id/auth_admin_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auth_student_btn"
        android:layout_alignLeft="@id/auth_student_btn"
        android:layout_marginTop="16dp"
        android:text="@string/auth_admin_btn_text"
        />

</RelativeLayout>